# Application Settings
SECRET_KEY=your-super-secret-key

# Token Expiry in minutes (adjust as needed)
ACCESS_TOKEN_EXPIRE_MINUTES=30

# PostgreSQL Database Settings
POSTGRES_USER=bidwize_user
POSTGRES_PASSWORD=bidwize_password
POSTGRES_DB=bidwize_db

# The DB_HOST is set to the name of your Postgres service in Docker Compose.
DB_HOST=postgres
DB_PORT=5432

# Constructed Database URL for SQLAlchemy
DATABASE_URL=postgresql://bidwize_user:bidwize_password@postgres:5432/bidwize_db
